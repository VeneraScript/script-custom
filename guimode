--// Load Venera ESP
local ESP = loadstring(game:HttpGet("https://raw.githubusercontent.com/VeneraScript/venera-esp/refs/heads/main/myEspScript.lua"))()

--// UI Library
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

--// Window Setup
local Window = OrionLib:MakeWindow({
	Name = "Custom ESP Menu",
	HidePremium = false,
	SaveConfig = true,
	ConfigFolder = "ESPConfig"
})

--// Tabs
local Tab = Window:MakeTab({
	Name = "ESP",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

--// Sections
local Section = Tab:AddSection({Name = "Player ESP"})

--// Toggles
Tab:AddToggle({
	Name = "Enabled",
	Default = false,
	Callback = function(Value)
		ESP:Toggle(Value)
	end
})

Tab:AddToggle({
	Name = "Boxes",
	Default = true,
	Callback = function(Value)
		ESP.Boxes = Value
	end
})

Tab:AddToggle({
	Name = "Names",
	Default = true,
	Callback = function(Value)
		ESP.Names = Value
	end
})

Tab:AddToggle({
	Name = "Team Color",
	Default = true,
	Callback = function(Value)
		ESP.TeamColor = Value
	end
})

Tab:AddToggle({
	Name = "Show Team Mates",
	Default = true,
	Callback = function(Value)
		ESP.TeamMates = Value
	end
})

Tab:AddToggle({
	Name = "Show Players",
	Default = true,
	Callback = function(Value)
		ESP.Players = Value
	end
})

Tab:AddToggle({
	Name = "Tracers",
	Default = false,
	Callback = function(Value)
		ESP.Tracers = Value
	end
})

--// Optional: NPC ESP (kalau lo pakai object listener di game)
local npcTab = Window:MakeTab({
	Name = "NPC ESP",
	Icon = "rbxassetid://6031075938",
	PremiumOnly = false
})

npcTab:AddButton({
	Name = "Add Dummy ESP",
	Callback = function()
		ESP:AddObjectListener(workspace, {
			Name = "Dummy",
			Type = "Model",
			PrimaryPart = "HumanoidRootPart",
			Color = Color3.fromRGB(255, 255, 255),
			CustomName = "NPC",
			IsEnabled = "Enabled"
		})
	end
})

--// Notification
OrionLib:MakeNotification({
	Name = "ESP Loaded",
	Content = "UI & Venera ESP successfully loaded!",
	Image = "rbxassetid://4483345998",
	Time = 5
})
