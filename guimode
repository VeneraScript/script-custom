local targets = {
    ["unicorn"] = Color3.fromRGB(255, 182, 193),
    ["outlaw"] = Color3.fromRGB(255, 0, 0),
    ["wolf"] = Color3.fromRGB(160, 160, 160),
    ["werewolf"] = Color3.fromRGB(100, 100, 100),
    ["vampire"] = Color3.fromRGB(128, 0, 128),
    -- Zombie models with custom display names
    ["model_walker"] = {color = Color3.fromRGB(0, 255, 0), name = "Zombie"},
    ["model_runner"] = {color = Color3.fromRGB(255, 165, 0), name = "Runner Zombie"}
}

-- In the ScanForTargets function, modify the zombie detection to:
if obj:IsA("Model") and obj:FindFirstChildWhichIsA("Humanoid") then
    local nameLower = obj.Name:lower()
    local zombieData = nil
    
    if nameLower:find("model_walker") then
        zombieData = targets["model_walker"]
    elseif nameLower:find("model_runner") then
        zombieData = targets["model_runner"]
    end
    
    if zombieData then
        local part = obj:FindFirstChild("HumanoidRootPart") or obj:FindFirstChildWhichIsA("BasePart")
        if part then
            if not addedModels[obj] then
                local espObj = ESP:Add(obj, {
                    Name = zombieData.name,
                    PrimaryPart = part,
                    Color = zombieData.color,
                    IsEnabled = "ShowNPCs"
                })
                addedModels[obj] = espObj
            end
        end
    end
end

-- Update the DescendantAdded event similarly:
if obj:IsA("Model") and obj:FindFirstChildWhichIsA("Humanoid") then
    local nameLower = obj.Name:lower()
    if nameLower:find("model_walker") or nameLower:find("model_runner") then
        task.wait(0.5)
        ScanForTargets()
    end
end
